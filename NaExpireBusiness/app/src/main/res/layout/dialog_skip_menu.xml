<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/lblCreateMenuNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Do you want to create your menu now?"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/lblCreateMenuNothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCreateMenuNow"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnCreateMenuYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Yes"
        android:layout_below="@+id/lblCreateMenuNow"
        android:layout_toLeftOf="@id/lblCreateMenuNothing"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/btnCreateMenuLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lblCreateMenuNow"
        android:layout_toRightOf="@id/lblCreateMenuNothing"
        android:text="Later"
        android:textColor="@color/colorAccent"
        android:background="@android:color/transparent"/>
</RelativeLayout>